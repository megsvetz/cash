<div class="container text-center">
  <br><br>
  <h1><%= @member.name %> </h1>
   <div class="pull-right">
    <a href="<%= new_receipt_path(member_id: @member.id) %>" class="btn btn-lg btn-success">
      <span class="glyphicon glyphicon-plus"></span>
    </a>
  </div>
    <!-- Loop through all receipts -->
    <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Store</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @member.receipts.each do |receipt| %>
      <tr>
        <td><%= link_to(receipt.name, receipt_path(receipt)) %></td> 
        <td><%= receipt.date %></td>
        <td><%= receipt.amount %></td>
        <td><%= receipt.description %></td>
        <td><a href="<%= edit_receipt_path(receipt) %>" class="btn btn-info"><span class = "glyphicon glyphicon-pencil"></span></a>
           <a href="<%= receipt_path(receipt) %>" class="btn btn-danger" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
          </td>
        <% end %>
      </tr>
    </tbody>
    </table>
 
    <div class="pull-right">
    <h3>Total: <%= total_amount(@member) %></h3>

</div>
</div>
