<br><br><br>

<div class="pull-left" 
  <img src="">
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Store</th>
      <th>Date</th>
      <th>Amount</th>
      <th class="col-md-6">Description</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @receipts.each do |r| %>
    <tr>
      <td><%= link_to(r.name, receipt_path(r)) %></td>
      <td><%= r.date %></td>
      <td>$ <%= r.amount %></td>
      <td ><%= r.description %></td>
      <td><a href="<%= edit_receipt_path(r) %>" class="btn btn-info"><span class = "glyphicon glyphicon-pencil"></span></a>
        <a href="<%= receipt_path(r) %>" class="btn btn-danger" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
      </td>
    </tr>
  <% end %>
</tbody>
</table>