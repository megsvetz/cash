<div class="container text-center">
  <h1 class="page-header">Log In</h1>

  <%= form_for(login_path, class: 'form') do |f| %>
    <div class="form-group">
      <%= f.label(:username, 'Family Name', class: 'form-label') %>
      <%= f.text_field(:username, class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= f.label(:password, 'Password', class: 'form-label') %>
      <%= f.password_field(:password, class: 'form-control') %>
      <!-- <input type="password" name="password" class ="form-control input-lg placeholder">-->
    </div> 
    <div class="form-group">
      <%= f.submit('Login', class: 'btn btn-success btn-lg')%>
    </div>
  <% end %>

</div>
